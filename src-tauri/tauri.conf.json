{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "led-contrller",
  "version": "0.1.0",
  "identifier": "com.mzee.ledcontrller",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "led-contrller",
        "width": 830,
        "height": 700,
        "decorations": false,
        "shadow": true,
        "backgroundColor": "#0f0f1a",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "zh-CN"
        ]
      }
    }
  }
}